<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<h3><%= @task.completed ? "Done" : "Not Done" %></h3>
<%= link_to 'Back to List', root_path %>
<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Delete', delete_task_path(@task),
    method: :delete,
    data: {confirm: "Are you sure?"}%>